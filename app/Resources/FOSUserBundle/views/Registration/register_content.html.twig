{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register', 'style': 'width: 100%; max-width: 600px; padding: 15px; margin: 0 auto;'}}) }}
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
        <p>Carnet d'adresse pour Marsupilami </p>
    </div>

    <div class="mb-3">
        <label for="username"> {{ form_label(form.username) }}</label>
        {{ form_errors(form.username) }}
        <div class="input-group">
            <div class="input-group-prepend">
            <span class="input-group-text">@</span>
            </div>
            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'id': 'username'} }) }}
        </div>
    </div>

    <div class="mb-3">
        <label for="email"> {{ form_label(form.email) }}</label>
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'id': 'email'} }) }}
    </div>

    <div class="mb-3">
        <label for="plainPasswordFirst"> {{ form_label(form.plainPassword.first) }}</label>
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'id': 'plainPasswordFirst'} }) }}
    </div>

    <div class="mb-3">
        <label for="plainPasswordSecond"> {{ form_label(form.plainPassword.second) }}</label>
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'id': 'plainPasswordSecond'} }) }}
    </div>

    <div class="row">
        <div class="col-md-3 mb-3">
            <label for="age"> {{ form_label(form.age) }}</label>
            {{ form_errors(form.age) }}
            {{ form_widget(form.age, { 'attr': {'class': 'form-control', 'id': 'age'} }) }}
        </div>
        <div class="col-md-3 mb-3">
            <label for="famille"> {{ form_label(form.famille) }}</label>
            {{ form_errors(form.famille) }}
            {{ form_widget(form.famille, { 'attr': {'class': 'form-control', 'id': 'famille'} }) }}
        </div>
        <div class="col-md-3 mb-3">
            <label for="race"> {{ form_label(form.race) }}</label>
            {{ form_errors(form.race) }}
            {{ form_widget(form.race, { 'attr': {'class': 'form-control', 'id': 'race'} }) }}
        </div>
        <div class="col-md-3 mb-3">
            <label for="nourriture"> {{ form_label(form.nourriture) }}</label>
            {{ form_errors(form.nourriture) }}
            {{ form_widget(form.nourriture, { 'attr': {'class': 'form-control', 'id': 'nourriture'} }) }}
        </div>
    </div>

    <hr class="mb-4">
    <input type="submit" class="btn btn-primary btn-lg btn-block" value="{{ 'registration.submit'|trans }}" />
{{ form_end(form) }}

