{% trans_default_domain 'FOSUserBundle' %}

    <div class="container">
        <div class="text-center">
            <h2>Mise Ã  jour du profil</h2>
        </div>


            <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Mes informations personnelles</h4>
            
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

                <div class="mb-3">
                    <label for="username"> {{ form_label(form.username) }}</label>
                    {{ form_errors(form.username) }}
                    <div class="input-group">
                        <div class="input-group-prepend">
                        <span class="input-group-text">@</span>
                        </div>
                        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'id': 'username'} }) }}
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email"> {{ form_label(form.email) }}</label>
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'id': 'email'} }) }}
                </div>

                <div class="mb-3">
                    <label for="email"> {{ form_label(form.current_password) }}</label>
                    {{ form_errors(form.current_password) }}
                    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'id': 'email'} }) }}
                </div>

                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="age"> {{ form_label(form.age) }}</label>
                        {{ form_errors(form.age) }}
                        {{ form_widget(form.age, { 'attr': {'class': 'form-control', 'id': 'age'} }) }}
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="famille"> {{ form_label(form.famille) }}</label>
                        {{ form_errors(form.famille) }}
                        {{ form_widget(form.famille, { 'attr': {'class': 'form-control', 'id': 'famille'} }) }}
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="race"> {{ form_label(form.race) }}</label>
                        {{ form_errors(form.race) }}
                        {{ form_widget(form.race, { 'attr': {'class': 'form-control', 'id': 'race'} }) }}
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="nourriture"> {{ form_label(form.nourriture) }}</label>
                        {{ form_errors(form.nourriture) }}
                        {{ form_widget(form.nourriture, { 'attr': {'class': 'form-control', 'id': 'email'} }) }}
                    </div>
                </div>


                <hr class="mb-4">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="{{ 'profile.edit.submit'|trans }}" />
            {{ form_end(form) }}
        </div>
    </div>
