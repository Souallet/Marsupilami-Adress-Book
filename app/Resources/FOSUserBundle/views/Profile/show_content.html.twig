{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="container">
      <div class="text-center">
        <h2>MON PROFIL</h2>
      </div>

      <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Mes ami(e)s</span>
            <span class="badge badge-secondary badge-pill">3</span>
          </h4>
          <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Product name</h6>
                <small class="text-muted">Brief description</small>
              </div>
              <span class="text-muted">$12</span>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Second product</h6>
                <small class="text-muted">Brief description</small>
              </div>
              <span class="text-muted">$8</span>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Third item</h6>
                <small class="text-muted">Brief description</small>
              </div>
              <span class="text-muted">$5</span>
            </li>
            <li class="list-group-item d-flex justify-content-between bg-light">
              <div class="text-success">
                <h6 class="my-0">Promo code</h6>
                <small>EXAMPLECODE</small>
              </div>
              <span class="text-success">-$5</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Total (USD)</span>
              <strong>$20</strong>
            </li>
          </ul>
        </div>
        <div class="col-md-8 order-md-1">
          <h4 class="mb-3">Mes informations personnelles</h4>
          <form>
            <div class="mb-3">
              <label for="username">{{ 'profile.show.username'|trans }} </label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">@</span>
                </div>
                <input type="text" class="form-control" id="username" placeholder="{{ user.username }}" required="" disabled>
              </div>
            </div>

            <div class="mb-3">
              <label for="email">{{ 'profile.show.email'|trans }}</label>
              <input type="email" class="form-control" id="email" placeholder="{{ user.email }}" disabled>
            </div>

            <div class="row">
              <div class="col-md-3 mb-3">
                <label for="age">Age</label>
                <input type="text" class="form-control" id="age" placeholder="{{ user.age }}" required="" disabled>
              </div>
              <div class="col-md-3 mb-3">
                <label for="famille">Famille</label>
                <input type="text" class="form-control" id="famille" placeholder="{{ user.famille }}" required="" disabled>
              </div>
              <div class="col-md-3 mb-3">
                <label for="race">Race</label>
                <input type="text" class="form-control" id="race" placeholder="{{ user.race }}" required="" disabled>
              </div>
              <div class="col-md-3 mb-3">
                <label for="nourriture">Nourriture</label>
                <input type="text" class="form-control" id="nourriture" placeholder="{{ user.nourriture }}" required="" disabled>
              </div>
            </div>
          </form>
          <hr class="mb-4">
            <div class="row">
                <a class="btn btn-primary btn-lg btn-block" href="{{ path('fos_user_profile_edit') }}">Mettre Ã  jour mon profil</a> 
            </div>
        </div>
      </div>
    </div>
</div>
